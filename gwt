# this file is intended to be sourced from your login shell

function gwt_create_worktree {
    if [[ ! -d ${repodir}/${1} ]]; then
        echo -e "${green}gwt: Unable to find repo: ${nc}${1}"
        echo
        tree -d -L 1 --noreport ${repodir}
    else
        if [[ ! -d ${repodir}/${1}/.trees ]]; then
            echo -e "${green}gwt: Ensuring worktree parent dir exists in repo: ${nc}${1}"
            mkdir -p ${repodir}/${1}/.trees
        else
            cd ${repodir}/${1}/.trees
        fi

        if [[ -d ${repodir}/${1}/.trees/${2} ]]; then
            echo -e "${green}gwt: Found existing worktree ${nc}${2}${green} in ${nc}${1}"
            echo
            tree -d -L 1 --noreport ${repodir}/${1}/.trees
        else
            local fetch_remote
            fetch_remote="${3%\/*}"
            echo -e "${green}gwt: Checking if ${nc}${fetch_remote}${green} is a fetchable remote${nc}"
            local fetch_branch
            fetch_branch="${3#*\/}"
            local fetchable_remote
            fetchable_remote=$(git remotes | grep -E "^${fetch_remote}.*\(fetch\)$")

            if [[ -z "${fetchable_remote}" ]]; then
                echo -e "${green}gwt: Remote ${nc}${fetch_remote}${green} is not fetchable${nc}"
                echo -e "${green}gwt: Please re-run: ${nc}gwt create <repo> <worktree> <remote>"
            else
                echo -e "${green}gwt: Fetching remote: ${nc}${fetch_remote}"
                git fetch --prune --tags ${fetch_remote}

                echo -e "${green}gwt: Checking if ${nc}${fetch_branch}${green} is a valid head on ${nc}${fetch_remote}${green} remote${nc}"
                local remote_head
                remote_head=$(git ls-remote --heads ${fetch_remote} | grep "${fetch_branch}$")

                if [[ -z "${remote_head}" ]]; then
                    echo -e "${green}gwt: Head ${nc}${fetch_branch}${green} was not found on ${nc}${fetch_remote}${green} remote${nc}"
                    echo -e "${green}gwt: Please re-run: ${nc}gwt create <repo> <worktree> <remote>/<head>"
                else
                    echo -e "${green}gwt: Creating worktree${nc}"
                    local add_ret
                    git worktree add -b ${2} ${repodir}/${1}/.trees/${2} ${3}
                    add_ret=$?

                    if [[ ${add_ret} -ne 0 ]]; then
                        echo
                        echo -e "${green}gwt: Creating the worktree FAILED !!${nc}"
                    else
                        cd ${repodir}/${1}/.trees/${2}
                        gwt_init_submodules
                        echo -e "${green}gwt: Creating an empty commit${nc}"
                        git commit -m 'chore: empty commit to allow push'
                        echo -e "${green}gwt: Pushing the worktree${nc}"
                        git push origin
                    fi
                fi
            fi
        fi
    fi
}

function gwt_get_upstream_development_revision {
    echo -e "${green}gwt: Determining the upstream remote for this branch${nc}"
    local _upstream_remote; _upstream_remote=$(git rev-parse --abbrev-ref $(git branch --show-current)@{upstream} | cut -d\/ -f1)
    echo -e "${green}gwt: Determined the upstream remote for this branch: ${nc}${_upstream_remote}"
    echo -e "${green}gwt: Determining the upstream branch for this branch${nc}"
    local _upstream_branch; _upstream_branch=$(git rev-parse --abbrev-ref $(git branch --show-current)@{upstream} | cut -d\/ -f2)
    echo -e "${green}gwt: Determined the upstream branch for this branch: ${nc}${_upstream_branch}"

    echo -e "${green}gwt: Fetching info from remote: ${nc}${_upstream_remote}"
    git fetch --prune --force --quiet upstream

    echo -e "${green}gwt: Checking if ${nc}${_upstream_remote}/${_upstream_branch}${green} has advanced since last pull${nc}"
    git merge-base --is-ancestor $(git branch --show-current) ${_upstream_remote}/${_upstream_branch}
    ancestor_ret=$?

    if [[ ${ancestor_ret} -eq 0 ]]; then
        echo -e "${green}gwt: Remote head has not advanced${nc}"
    else
        echo -e "${green}gwt: Merging from remote head: ${nc}${_upstream_remote}/${_upstream_branch}"
        git merge ${_upstream_remote}/${_upstream_branch}
    fi
}

function gwt_check_for_merge {
    echo -e "${green}gwt: Checking if a merge is in progress${nc}"
    git rev-list -1 MERGE_HEAD &>/dev/null
    if [[ $? -eq 128 ]]; then
        echo -e "${green}gwt: A merge IS NOT in progress${nc}"
        gwt_get_origin_revision
        gwt_get_upstream_development_revision
    else
        echo -e "${green}gwt: A MERGE IS IN PROGRESS. Please finish the merge!${nc}"
    fi
    }
function gwt_enter_worktree {
    cd ${1}
    gwt_check_for_merge
    _todo=$(whence todo)
    if [[ -n ${_todo} ]] ; then
        echo
        todo pop
    fi
}

function prune_cache_worktrees {
    git worktree list | grep -E '\.cache.*old-rev' | awk '{print $1}' | while read line2; do
        git worktree remove -f "${line2}"
    done
}

function gwt_find_trees {
    if [[ -d ${repodir} ]]; then
        if [[ -z ${1} ]]; then
            find ${repodir} -type d -wholename '*/.trees' -print | while read line; do
                (cd ${line} && prune_cache_worktrees && dirname ${line} && git worktree list | tail -n +2 | sed -e "s#${repodir}/.*\.trees/##g" -e 's/^/↳\ /')
                echo
            done
        else
            basename ${repodir}/${1}
            (cd ${repodir}/${1} && prune_cache_worktrees && git worktree list | tail -n +2 | sed -e "s#${repodir}/${1}/.trees/##g" -e 's/^/↳\ /')
        fi
    else
        echo -e "${green}gwt: Cannot find the path specified by GWT_REPO_HOME{$nc}"
        echo -e "${green}gwt: Please set/update GWT_REPO_HOME and try again${nc}"
    fi
}

function gwt_find_specified_worktree {
    local reponame
    if [[ $# -gt 1 ]]; then
        reponame=${1}
        shift
    else
        reponame=''
    fi

    if [[ -d ${repodir}/${reponame} ]]; then
        local worktrees
        worktrees=$(find ${repodir}/${reponame} -type d -wholename "*/.trees/${1}" -print)
        local worktree_count
        if [[ -z "${worktrees}" ]]; then
            worktree_count=0
        else
            worktree_count=$(echo ${worktrees} | wc -l)
        fi

        case ${worktree_count} in
            0)
                if [[ -z "${reponame}" ]]; then
                    echo -e "${green}gwt: Unable to find a worktree named ${nc}${1}${green} in ${nc}${repodir}"
                    echo
                    gwt_find_trees
                else
                    echo -e "${green}gwt: Unable to find a worktree named ${nc}${1}${green} in ${nc}${reponame}"
                    echo -e "${green}gwt: If you wish to create this worktree, pls re-run as: ${nc}gwt create <repo> <worktree>"
                fi
                ;;
            1)
                echo -e "${green}gwt: Found the ${nc}${1}${green} worktree${nc}"
                gwt_enter_worktree ${worktrees}
                ;;
            *)
                echo -e "${green}gwt: Found multiple worktrees named ${nc}${1}${green} in ${nc}${repodir}"
                echo -e "${green}gwt: Please re-run as: ${nc}gwt <repo> <worktree>"
                echo
                gwt_find_trees
                ;;
        esac
    else
        echo -e "${green}gwt: Unable to find ${nc}${reponame} ${green}repo${nc}"
        echo -e "${green}gwt: Double-check GWT_REPO_HOME${nc}"
    fi
}

function gwt_get_origin_revision {
    echo -e "${green}gwt: Determining the worktree's branch revision${nc}"
    local local_revision
    local_revision=$(git rev-parse $(git branch --show-current))
    echo -e "${green}gwt: Local worktree's branch revision: ${nc}${local_revision}"

    echo -e "${green}gwt: Fetching info from remote: ${nc}origin"
    git fetch --prune --force --quiet origin

    echo -e "${green}gwt: Checking if this branch exists on remote: ${nc}origin"
    local remote_head
    remote_head=$(git ls-remote --heads origin | grep "refs/heads/$(git branch --show-current)$")

    if [[ -z "${remote_head}" ]]; then
        echo -e "${green}gwt: This worktree's branch not found on remote: ${nc}origin"
    else
        echo -e "${green}gwt: Checking the revision of this branch on: ${nc}origin"
        local remote_revision
        remote_revision=$(git rev-parse origin/$(git branch --show-current))
        echo -e "${green}gwt: Remote ${nc}origin${green} has this branch on revision: ${nc}${remote_revision}"

        echo -e "${green}gwt: Checking the base revision of this branch on: ${nc}origin"
        local base_revision
        base_revision=$(git merge-base $(git branch --show-current) origin/$(git branch --show-current))

        if [[ "${local_revision}" == "${remote_revision}" ]]; then
            echo -e "${green}gwt: Revisions match; continuing${nc}"
        elif [[ "${local_revision}" == "${base_revision}" ]]; then
            echo -e "${green}gwt: Pulling from remote: ${nc}origin"
            git pull origin $(git branch --show-current)
        elif [[ "${remote_revision}" == "${base_revision}" ]]; then
            echo -e "${green}gwt: Pushing to remote: ${nc}origin"
            git push --prune origin $(git branch --show-current)
        fi
    fi
}

function gwt_init_submodules {
        echo -e "${green}gwt: Initializing submodules${nc}"
        git submodule update --remote --recursive --init
}

function gwt_prune_worktree {
    local reponame
    if [[ $# -gt 1 ]]; then
        reponame=${1}
        shift
    else
        reponame=''
    fi

    if [[ -d ${repodir}/${reponame} ]]; then
        local worktrees
        worktrees=$(find ${repodir}/${reponame} -type d -wholename "*/.trees/${1}" -print)
        local worktree_count
        if [[ -z "${worktrees}" ]]; then
            worktree_count=0
        else
            worktree_count=$(echo ${worktrees} | wc -l)
        fi

        case ${worktree_count} in
            1)
                cd $(dirname ${worktrees})
                echo -e "${green}gwt: Removing the worktree from disk: ${nc}${worktrees}"
                git worktree remove --force ${worktrees}
                echo -e "${green}gwt: Deleting the branch: ${nc}${1}"
                git branch -D ${1} 2>/dev/null
                cd ~
                ;;
            *)
                echo -e "${green}gwt: Could not find the worktree ${nc}${1}${green} in repository ${nc}${reponame}"
                echo -e "${green}gwt: Unable to prune the worktree: ${nc}${1}"
                ;;
        esac
    fi
}

function gwt {
    # where all your repos live
    local repodir; repodir="${GWT_REPO_HOME:=/srv/repos}" ; repodir="${repodir%/}"
    # colors
    green='\033[0;32m'
    nc='\033[0m'

    case $# in
        0)
            # no args, give them a listing
            gwt_find_trees
            ;;
        1|2)
            case "${1}" in
                create|prune)
                    echo -e "${green}gwt: Invalid options${nc}"
                    echo -e "${green}gwt: Please re-run as: ${nc}gwt ${1} <repo> <worktree>"
                    ;;
                ls)
                    gwt_find_trees ${2}
                    ;;
                *)
                    gwt_find_specified_worktree "$@"
                    ;;
            esac
            ;;
        3|4)
            if [[ "${1}" == "create" ]]; then
                shift
                case $# in
                    2)
                        gwt_create_worktree ${1} ${2} upstream/development
                        ;;
                    3)
                        local remote ; remote=${3%\/*}
                        local head; head=${3#*\/}
                        gwt_create_worktree ${1} ${2} ${remote}/${head:=development}
                        ;;
                    4)
                        local remote ; remote=${3}
                        local head; head=${4}
                        gwt_create_worktree ${1} ${2} ${remote}/${head}
                        ;;
                esac
            elif [[ "${1}" == "prune" ]]; then
                shift
                gwt_prune_worktree "$@"
            else
                echo -e "${green}gwt: Invalid options${nc}"
                echo -e "${green}gwt: Please re-run as: ${nc}gwt create <repo> <worktree>"
            fi
            ;;
    esac
}
